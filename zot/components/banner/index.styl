.banner
	.owl
		&-prev, &-next
			background: none
			box-shadow: none

		&-next:before
			background: none

#banner__ruler
	width: viewport
	max-width: 100%
	margin: 0 auto 20px

	.slide__html
		.banner
			&__item
				display: flex
				justify-content: flex-start
				align-items: center
				font-size: 12px
				font-weight: regular
				text-transform: uppercase
				padding: 0 10px

				.ico
					margin-right: 5px

				span span
					font-weight: light

	.banner
		&__wrapper
			width: auto

@media (min-width: viewport)
	#banner__ruler
		.owl-item
			width: auto !important
