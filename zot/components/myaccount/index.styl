.myaccount
	height: 48px
	min-width: 48px

	&__header
		display: flex
		justify-content: center
		align-items: center
		font-size: 14px
		text-transform: uppercase
		min-width: 48px
		min-height: 48px

		a
			font-size: 13px

		&:before
			icon('\f007')
			font-size: 24px

	&:hover
		.myaccount__header
			a
				background: none

	&__reseller, &__links
		display: none

	&__reseller
		display: none
		justify-content: flex-start
		align-items: center

		.ico
			width: 12px
			height: 15px
			margin-right: 5px

		a
			display: flex
			justify-content: flex-start
			align-items: center
			padding-bottom: 10px

	&__content
		.title
			font-size: 16px
			font-weight: medium

		.email-input, .password-input
			height: 48px
			border: solid 1px #ebe7e2
			border-radius: 0
			box-shadow: none

		.form-list .fields
			display: block

	&__login
		label
			display: block
			font-size: 14px
			font-weight: medium
			color: unquote($color1_bg)

	&__forgot
		display: block
		position: static
		padding: 10px 0
		font-size: 12px
		font-weight: light

	.recaptcha
		display: none

	&__login-btn
		width: 150px
		height: 50px
		border-radius: 0
		font-size: 16px
		font-weight: medium

	&__register
		padding-bottom: 30px
		background: unquote($color1_bg)
		box-shadow: 20px 0 0 unquote($color1_bg), -20px 0 0 unquote($color1_bg)

		.title
			font-size: 16px
			font-weight: medium
			color: #fff

		.std p
			font-size: 12px
			font-weight: light
			line-height: 20px
			color: #fff

	&__create
		display: flex
		justify-content: center
		align-items: center
		width: 150px
		height: 50px
		margin-top: 50px
		background: #fff
		color: unquote($color1_bg)

	&__register-btn
		display: none

@media desktop
	.myaccount
		height: auto
		min-height: 0

		&__header
			display: block
			min-height: 0

			&:before
				display: none

		&__reseller
			display: flex

		&__links
			display: flex
			justify-content: space-between

			a
				flex: 0 0 auto
				min-width: 0
				height: 14px
				line-height: 14px

				&:last-child
					text-align: right
					border-left: solid 1px #000
					padding-left: 30px

		&__content
			display: none
			justify-content: space-between
			align-items: flex-start
			flex-flow: row wrap
			width: 485px
			overflow: hidden
			padding: 0
			border: 0
			box-shadow: 0 0 0 1px #e5e5e5
			border-radius: 3px

			> .title
				display: none
				flex: 0 0 100%

		&__login
			flex: 0 0 265px
			margin: 0
			padding: 30px

			&:before
				content: 'Acesse sua Conta'
				display: block
				font-size: 16px
				font-weight: medium
				margin-bottom: 16px

		&__register
			flex: 1
			margin: 0
			padding: 30px
			box-shadow: none

			.std p
				min-height: 158px

		&:hover .myaccount__content
			display: flex
