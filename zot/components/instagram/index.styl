.instagram
	background-size: cover
	background-attachment: fixed
	margin: 0 -16px

	&__container
		width: viewport
		max-width: 90vw
		margin: 0 auto
		text-align: center
		padding: 20px 0

	&__header
		padding-bottom: 50px

	&__title
		margin-bottom: 30px

		a
			font-size: 27px
			font-weight: regular
			text-transform: uppercase
			line-height: 40px
			color: #fff
			border-bottom: solid 2px #fff

	&__description
		width: 385px
		max-width: 100%
		margin: 0 auto
		font-size: 17px
		font-weight: medium
		text-transform: uppercase
		color: #fff

	&__list
		display: flex
		justify-content: center
		flex-flow: row wrap
		margin: -10px

	&__link
		display: inline-block
		flex: 0 1 249px
		min-width: 0
		margin: 10px
		border: solid 15px #fff
		border-bottom-width: 40px
		box-shadow: 0px 14px 6px 0px rgba(0, 0, 0, 0.13)

@media desktop
	.instagram
		&__container
			display: flex
			align-items: center

		&__main
			order: -1
			flex: 1
			min-width: 0

		&__header
			flex: 0 1 430px
