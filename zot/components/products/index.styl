.products
	&__title
		display: flex
		justify-content: flex-start
		align-items: center
		font-size: 20px
		letter-spacing: 8px
		text-transform: uppercase
		color: unquote($color1_bg)

		&:after
			content: ''
			flex: 1
			height: 2px
			background: unquote($color1_bg)
			margin-left: 10px

	&__case
		display: block
		box-shadow: none
		text-align: center

	&__name
		font-size: 14px
		font-weight: regular
		text-transform: uppercase

	.price-box
		padding-top: 10px

	.configurable-swatch-list
		justify-content: center

		a
			display: block
			width: 15px
			height: 15px
			border-radius: 50%
			overflow: hidden
			min-width: 0
			box-shadow: none
